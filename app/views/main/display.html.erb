<div class='bg-slate-100 p-4 shadow-lg rounded-xl flex flex-col'>
  <h1 class='text-5xl font-bold text-center text-slate-700 my-4 mx-2'>Subjects Summary</h1>
  <div class='summarySpan'>
    <h1 class='text-5xl font-bold'><%= @totalScore %></h1>
    <p>Total Score</p>
  </div>
  <div class='summarySpan'>
    <h1 class='text-5xl font-bold'><%= @averageScore %></h1>
    <p>Average Score</p>
  </div>
  <div class='summarySpan'>
    <h1 class='text-5xl font-bold'><%= @highestScore %></h1>
    <p>highest Score</p>
  </div>
  <div class='summarySpan'>
    <h1 class='text-5xl font-bold'><%= @bestSubject %></h1>
    <p>Best Subject</p>
  </div>
  <div class='flex gap-10 p-2'>
    <%= link_to 'Add Again', '/' ,class: 'myBtn mt-2 text-center' %>
    <%= link_to 'Dashboard', '/score/list' ,class: 'myBtn mt-2 text-center bg-indigo-500' %>
  </div>
</div>
